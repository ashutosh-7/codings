#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int main() {
 vector<vector<int> > v1;
 vector<int>v2;
 int i,j,n,k=0,m;int key;int sum =0,sum1=0;
 cin>>n;
 for(i=0;i<n;i++)
 {
     for(j=0;j<n;j++)
     {
         cin>>key;
         v2.push_back(key);
     }
     v1.push_back(v2);
     v2.clear();
 }
 
 for(i=0;i<n;i++)
 {
     for(j=0;j<n;j++)
     {
         if(i==j)
         {
             sum=sum+v1[i][j];
         }
         k=i+j;
         if(k==n-1)
         {
             sum1=sum1+v1[i][j];
             //cout<<v1[i][j]<<endl;
         }
     }
 }
 //cout<<sum<<"    "<<sum1<<"   "<<endl;
 cout<<abs(sum-sum1);
    return 0;
}
