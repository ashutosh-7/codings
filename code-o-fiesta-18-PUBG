#include <iostream>
using namespace std;

int main() {
	int m,n,c=0,d=0,e=0,f=0;
	cin>>m>>n;
	d=m;e=n;
	if(m>n)
	{
		while(m>n)
		{
			m-=2;
			n+=1;
			c++;
		}
	}
	else{
		while(m<n)
		{
			n-=2;
			m+=1;
			c++;
		}
	}
	while(m>0&&n>0)
	{
	if(m>n)
	{
		m-=2;
			n+=1;
			c++;
	
	}
	else{
		n-=2;
			m+=1;
			c++;
	}
	}
if(d==1&&e==1)
{
	cout<<"0";
}
else
	cout<<c;
	return 0;
}
